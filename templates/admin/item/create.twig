{% extends 'admin/parts/layout.twig' %}
{% block title %}商品一覧{% endblock %}

{% block contents %}

<h2>商品登録</h2>
{% if '' != error.item_name %}商品名は必須入力です<br>{% endif %}
{% if '' != error.item_price %}値段は必須入力です。また、数値で入力してください。<br>{% endif %}

<form action="/admin/item/create" method="POST">
{{ csrf() }}
商品名: <input name="item_name" value="{{ data.item_name }}"><br>
値段: <input name="item_price" value="{{ data.item_price }}"><br>
商品詳細: <textarea name="item_detail">{{ data.item_detail }}</textarea><br>
<br>
<button>登録</button>
</form>

{% endblock %}
